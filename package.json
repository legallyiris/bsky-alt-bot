{
  "name": "altbot",
  "version": "1.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:bot": "cd packages/bot && bun run dev",
    "dev:web": "cd packages/web && bun run dev",
    "dev": "run-p dev:bot dev:web",
    "start": "cd packages/bot && bun run start",
    "lint:oxlint": "oxlint . --fix -D correctness --ignore-path .gitignore",
    "lint:eslint": "eslint . --fix",
    "lint": "run-s lint:*",
    "format": "prettier --write \"**/*.{vue,ts,js,json,md,html,css,scss}\" \"!**/src/lexicons/**\""
  },
  "devDependencies": {
    "@types/bun": "latest",
    "eslint": "^9.22.0",
    "eslint-plugin-oxlint": "^0.16.0",
    "npm-run-all2": "^7.0.2",
    "oxlint": "^0.16.0",
    "prettier": "^3.5.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
